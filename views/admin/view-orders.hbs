
<style>
  .container {
    max-width: 1000px;
    margin: 0 auto;
    padding-bottom: 2rem;
  }

  .table {
    font-size: 14px;
  }

  .table thead th {
    font-weight: bold;
    vertical-align: middle;
    color: #fff;
    background-color: #343a40;
    border-color: #343a40;
  }

  .table tbody td {
    vertical-align: middle;
  }

  .btn-primary,
  .btn-danger {
    padding: 0.375rem 0.75rem;
    font-size: 0.875rem;
    line-height: 1.5;
    border-radius: 0.25rem;
  }

  .btn-primary {
    background-color: #007bff;
    border-color: #007bff;
  }

  .btn-danger {
    background-color: #dc3545;
    border-color: #dc3545;
  }
</style>



<section>
<div class="container">
  <table class="table mt-4" id="userTable">
    <thead class="thead-dark">
      <tr>
        <th scope="col">➩</th>
        <th scope="col">Product Id</th>    
        <th scope="col">Delivery address</th>
        <th scope="col">Total Amount</th>
        <th scope="col">Payment Method</th>
        <th scope="col">Order Status</th>
        <th scope="col">Options</th>
      </tr>
    </thead>
    <tbody>
      {{#each orders}}
      <tr>
        <th scope="row">.</th>
        <td>{{this._id}}</td>
        <td>{{this.deliveryDetails.address}}</td>
        <td>₹{{this.totalAmount}}</td>
        <td>{{this.paymentMethod}}</td>
        <td>{{this.status}}</td>
        
         <td>
                        {{#if (eq this.status "placed")}}
                        {{!-- <a href="/admin/status-change?id={{this._id}}&&st=Shipped" class="btn btn-success btn-block"
                            onclick="return confirm('Are you want to place shipped ?')">Shipped</a> --}}
                            <button class="btn btn-success btn-block shipped-btn" data-id="{{this._id}}" data-status="Shipped">Shipped</button>

                            {{/if}}
                          {{#if (eq this.status "Shipped")}}  
                        {{!-- <a href="/admin/status-change?id={{this._id}}&&st=Delivered" class="btn btn-success btn-block"
                            onclick="return confirm('Are you want to place delivered ?')">Delivered</a> --}}
                            <button class="btn btn-success btn-block delivered-btn" data-id="{{this._id}}" data-status="Delivered">Delivered</button>

                            {{/if}}
                              {{#if (nteq this.status "Cancelled")}} 
                        {{!-- <a href="/admin/status-change?id={{this._id}}&&st=Cancelled" class="btn btn-danger btn-block"
                            onclick="return confirm('Are you want to cancel ?')">Cancel</a> --}}
                            {{!-- <button class="btn btn-danger btn-block cancel-btn" data-id="{{this._id}}" data-status="Cancelled">Cancel</button> --}}
                            {{/if}}
                    </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>






{{#if err}}
            <h3 class="d-flex justify-content-center" style="color: rgb(0, 0, 0);">{{err}}</h3>
            {{/if}}

  <div class="d-flex flex-row-reverse">
                <form class="form-inline" action="/admin/all-users/" method="post">
                    <input class="form-control mr-sm-2" type="search" name="search" placeholder="Search"
                        aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>
            </div>
   
