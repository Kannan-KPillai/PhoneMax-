
<style>
  .container {
    max-width: 1000px;
    margin: 0 auto;
    padding-bottom: 2rem;
  }

  .table {
    font-size: 14px;
  }

  .table thead th {
    font-weight: bold;
    vertical-align: middle;
    color: #fff;
    background-color: #343a40;
    border-color: #343a40;
  }

  .table tbody td {
    vertical-align: middle;
  }

  .btn-primary,
  .btn-danger {
    padding: 0.375rem 0.75rem;
    font-size: 0.875rem;
    line-height: 1.5;
    border-radius: 0.25rem;
  }

  .btn-primary {
    background-color: #007bff;
    border-color: #007bff;
  }

  .btn-danger {
    background-color: #dc3545;
    border-color: #dc3545;
  }
</style>



<section>
  
  <div class="container">
    <table class="table mt-4" id="userTable">
      <thead class="thead-dark">
        <tr>
          <th scope="col">âž©</th>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Options</th>
        </tr>
      </thead>
      <tbody>
        {{#each users}}
        <tr>
          <th scope="row">.</th>
          <td>{{this.Name}}</td>
          <td>{{this.Email}}</td>
          <td>
            {{#if this.isBlocked}}
           {{!-- <a href="/admin/unblock-user/{{this._id}}" class="btn btn-primary btn-block" onclick="return confirm('Are you sure you want to unblock the user {{this.Name}}?')">Unblock</a> --}}
            <a href="/admin/unblock-user/{{this._id}}" class="btn btn-primary btn-block unblock-btn">Unblock</a>

{{else}}
            {{!-- <a href="/admin/block-user/{{this._id}}" class="btn btn-danger btn-block" onclick="return confirm('Are you sure you want to block the user {{this.Name}}?')">Block</a> --}}
            <a href="/admin/block-user/{{this._id}}" class="btn btn-danger btn-block block-btn">Block</a>

            {{/if}}
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

{{#if err}}
            <h3 class="d-flex justify-content-center" style="color: rgb(0, 0, 0);">{{err}}</h3>
            {{/if}}

  <div class="d-flex flex-row-reverse">
                <form class="form-inline" action="/admin/all-users/" method="post">
                    <input class="form-control mr-sm-2" type="search" name="search" placeholder="Search"
                        aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>
            </div>
   
    <nav aria-label="Page navigation example">
<ul class="pagination justify-content-center">
    <li class="page-item"><a class="page-link" href="/all-users?p=1">1</a></li>
    <li class="page-item"><a class="page-link" href="/all-users?p=2">2</a></li>
    <li class="page-item"><a class="page-link" href="/all-users?p=3">3</a></li>

  </ul>
</nav>
</section>




