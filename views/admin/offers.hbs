<!DOCTYPE html>
<html>

<head>
  <title>Offers Page</title>
  <style>
    .container {
      max-width: 1000px;
      margin: 0 auto;
      padding-bottom: 2rem;
    }

    .btn {
      border-radius: 0;
    }

    .btn-success {
      background-color: #28a745;
      border-color: #28a745;
    }

    .btn-primary {
      background-color: #007bff;
      border-color: #007bff;
    }

    .btn-danger {
      background-color: #dc3545;
      border-color: #dc3545;
    }

    .table-responsive {
      border: none;
    }

    .table {
      font-size: 14px;
    }

    .table thead th {
      font-weight: bold;
      vertical-align: middle;
      color: #fff;
      background-color: #343a40;
      border-color: #343a40;
    }

    .table tbody td {
      vertical-align: middle;
    }
  </style>
</head>

<body>
  <section>
    <div class="container">
      <div class="table-responsive mt-5">
        <table class="table table-bordered table-hover" id="productsTable">
          <thead class="thead-dark">
            <tr>
              <th scope="col">Category</th>
              <th scope="col">Options</th>
            </tr>
          </thead>
          <tbody>
            {{#each category}}
            <tr>
              <td><strong>{{this.category}}</strong></td>
              <td>
                <form action="/admin/offers/{{this.category}}" method="post">
                  <div class="form-group">
                    <label for="offerPercentage">Offer Percentage</label>
                    <input type="number" name="offerPercentage" class="form-control" id="offerPercentage" placeholder="Enter offer percentage">
                  </div>
                  <button type="submit" class="btn btn-primary">Submit</button>
                </form>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </section>
</body>

</html>
