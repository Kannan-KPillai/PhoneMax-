<style>
  .brand-card {
    position: relative;
    overflow: hidden;
    border-radius: 0.5rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
  }

  .brand-card:hover {
    transform: translateY(-5px);
  }

  .brand-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    background-color: rgba(0, 0, 0, 0.8);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .brand-card:hover .brand-overlay {
    opacity: 1;
  }

  .brand-info {
    text-align: center;
  }

  .brand-info h5 {
    color: #fff;
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
  }

  .brand-info p {
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.9rem;
    margin-bottom: 0;
  }
  .carousel-img {
    height: 400px;
    width: 100%;
    object-fit: cover;
  }
</style>



