<section class="vh-100" style="background-color: #151515;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0 justify-content-center align-items-center">
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                <form action="/login" method="post">
                                    {{#if loginErr}}
                                    <p class="error">{{loginErr}}</p>
                                    {{/if}}

                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Login into your account
                                    </h5>

                                    <div class="form-outline mb-4">
                                        <input type="email" name="Email" class="form-control form-control-lg"
                                            style="border-color: #231b1b;" required />
                                        <label class="form-label" name="Email">Email address</label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="password" name="Password" class="form-control form-control-lg "
                                            style="border-color: #231b1b;" required />
                                        <label class="form-label" name="Password">Password</label>
                                    </div>

                                    <div class="pt-1 mb-4 d-flex justify-content-center">
                                        <button type="submit" class="btn btn-dark btn-lg" style="width: 14rem;"> Login
                                        </button>
                                    </div>
                                </form>


                                <form action='/otp-login' method="POST">

                                    <p><strong>OR login With OTP</strong></p>
                                    <div class="form-outline mb-4">
                                        <label class="form-label" name="Number">Your Number</label>
                                        <input type="text" name="number" class="form-control form-control-lg"
                                            style="border-color: #231b1b;" required />

                                        <div class="invalid-feedback">
                                            Please enter a valid number.
                                        </div>
                                    </div>

                                    <div class="pt-1 mb-4 d-flex justify-content-center">
                                        <button type="submit" class="btn btn-dark btn-lg" style="width: 14rem;"> Submit
                                        </button>
                                    </div>
                                    <a class="small text-muted" href="/updatePass">Forgot password?</a>
                                    <p class="mb-5 pb-lg-2" style="color: #13141e;">Don't have an account? <a
                                            href="/signup" style="color: #313cb2;">Register here</a></p>

                                </form>



                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    // JavaScript form validation
    document.getElementById('loginForm').addEventListener('submit', function (event) {
        event.preventDefault(); // Prevent form submission

        var emailInput = document.getElementById('form2Example17');
        var passwordInput = document.getElementById('form2Example27');

        if (emailInput.value === '') {
            emailInput.setCustomValidity('Please enter an email address.');
        } else {
            emailInput.setCustomValidity('');
        }

        if (passwordInput.value === '') {
            passwordInput.setCustomValidity('Please enter a password.');
        } else {
            passwordInput.setCustomValidity('');
        }

        if (this.checkValidity()) {
            // Form is valid, submit it or perform further actions
            console.log('Form is valid');
            // Uncomment the line below to submit the form
            // this.submit();
        }
    });
</script>